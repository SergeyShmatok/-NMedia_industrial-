<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.ImageViewingFragment"
    android:animateLayoutChanges="true"
    >

    <ImageView
        android:id="@+id/view_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/thomas_michael_shelby_009"
        />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_for_picture"
        android:layout_width="@dimen/_60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_back"
        android:paddingStart="@dimen/_14dp"
        app:icon="@drawable/baseline_arrow_back_24"
        app:iconSize="@dimen/_28dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/one_of_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/one_of_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/_1_of_1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_for_picture"
        app:layout_constraintStart_toEndOf="@+id/back_for_picture"
        app:layout_constraintTop_toTopOf="@+id/back_for_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>





